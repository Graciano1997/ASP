@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h5>Your Asp List Of Contacts</h5>
            <form method="POST" action="" class="mt-5">
                <label>
                    <p style="text-align: left;" ><span class="text-danger">* </span>Contact Name</p>
                <input type="text" name="Owner" class="form-control" placeholder="Graciano" />
                </label>
                <label>
                    <p style="text-align: left;"><span class="text-danger">* </span>Phone Number</p>
                <input type="number" name="ContactNumber" class="form-control" placeholder="915678609" />
                </label>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
            @if(Model.Status=="ok"){
                <p class="text-success">Created Successfully!</p>
            } else if(Model.Status=="error") {
                <p class="text-danger">An Error Occured </p>
            }

<br>
<div style="display: flex; justify-content: space-between; margin-top: 5rem;">
    <p class="display-4">Name</p>
    <p class="display-4">Number</p>
    <p class="display-4">Actions</p>
</div>

<hr>
        <section class="mt-3">
              @if (Model.UserContacts != null && Model.UserContacts.Length > 0){
    
            @foreach (var line in Model.UserContacts)
            {
                <div class="mt-1" style="display: flex; justify-content: space-between;  ">
                @foreach(string item in line.Split(',')){
                    <p class="p-2 ">@item</p>
                }
                
                <div style="display: flex; gap: 10px;"> 
                 <a class="btn btn-outline-danger" href="#delete"> Delete</a>
                <a class="btn btn-outline-secondary" href="#delete">Edit</a>
                </div>
                </div>
                <hr>
            }
    }
    else
    {
        <p>No Contact in your book.</p>
    }
        </section>
    
</div>
